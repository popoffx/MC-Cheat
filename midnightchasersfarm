	if state then
		task.spawn(function()
			while getfenv().fullBright do
				Lighting.Brightness = 2; Lighting.ClockTime = 14; Lighting.GlobalShadows = false
				task.wait(1)
			end
		end)
	else
		Lighting.Brightness = 1; Lighting.GlobalShadows = true; Lighting.ClockTime = 0 
	end
end)

