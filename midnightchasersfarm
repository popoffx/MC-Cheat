-- == RESET ==
example:AddButton("STOP ALL / RESET", function()
	getfenv().auto = false
	getfenv().moneyFarm = false
	getfenv().carFly = false
	getfenv().espEnabled = false
	getfenv().fullBright = false
	getfenv().driveSpeedLimit = 0
	getfenv().superAccel = false
	
	if getfenv().tween then getfenv().tween:Cancel() end
	getfenv().cancelman = nil
	clearTraffic(false)
	toggleCarFly(false)
	toggleESP(false)
	toggleHitboxExpander(false)
	
	Lighting.ClockTime = 0; Lighting.GlobalShadows = true
	if _G.ooga then _G.ooga:Destroy(); _G.ooga = nil end
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("Humanoid") and char.Humanoid.SeatPart then
        local car = char.Humanoid.SeatPart.Parent
        if car.PrimaryPart then enableArcadePhysics(car.PrimaryPart, false) end
    end
	
	warn("RESET: All systems restored.")
end)
